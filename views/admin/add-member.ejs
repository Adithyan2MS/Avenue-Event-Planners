<section style="padding-top: 2%;">
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center h3">
                ADD MEMBER
            </div>
        </div>
        <div class="row">
            <div class="">
                <form class="" action="/admin/addMember" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label for="inputName4">Name</label>
                        <input type="text" name="name" class="form-control" id="inputName4" placeholder="Name">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" name="email" class="form-control" id="inputEmail4" placeholder="Email">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputDate4">Date of Birth</label>
                        <input type="date" name="dob" class="form-control" id="inputDate4" placeholder="">
                      </div>
                      <div class=" form-group input-group  pt-2">
                        <div class="input-group-prepend ">
                          <label class="input-group-text" for="inputGroupSelect01">Gender</label>
                        </div>
                        <select class="custom-select col-md-4" name="gender" id="inputGroupSelect01">
                          <option selected>Choose...</option>
                          <option value="male">Male</option>
                          <option value="female">Female</option>
                          <option value="other">Other</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" name="address" id="inputAddress" placeholder="1234 Main St">
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" name="city" id="inputCity">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputState">State</label>
                        <input type="text" class="form-control" name="state" id="inputState">
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Initial Password</label>
                        <input type="text" class="form-control" name="password" id="inputPassword4" placeholder="Password">
                    </div>
                    <div class="d-flex justify-content-center p-5">
                        <button type="submit" class="btn btn-primary">SUBMIT</button>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</section>