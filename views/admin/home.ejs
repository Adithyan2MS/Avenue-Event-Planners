<section>
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4" style="width: 400px;">
                <div class=" p-4">
                    <a href="/admin/signup" class="btn btn-primary btn-xl">Add New Admin
                    </a>
                </div>
                <div class=" p-4">
                    <a href="/admin/home/addMember" class="btn btn-primary btn-xl">Add Team Members
                    </a>
                </div>
                <div class=" p-4">
                    <a href="/admin/home/add-portfolio" class="btn btn-primary btn-xl">Add Portfolio Images
                    </a>
                </div>
                <div class=" p-4">
                    <a href="/admin/schedules" class="btn btn-primary btn-xl">Schedules</a>
                </div>
            </div>
            <div class="col-md-8">

                <div class="">

                    <table class="table shadow-lg">
                        <thead>
                            <tr>
                                <!-- <th scope="col">No</th> -->
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Event type</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- {{#each products}} -->
                            <% details.forEach((detail,)=> { %>

                                <tr>
                                    
                                    <% for (var i=0; i < detail.eventdetail.length; i++) { %>
                                       
                                        <td>
                                            <%= detail.userdetail[0].name %>
                                        </td>

                                        <td>
                                            <%= detail.userdetail[0].email %>
                                        </td>
                                        
                                        <td>
                                            <%= detail.eventdetail[i].eventType %>
                                        </td>

                                        <td>
                                            <%= detail.eventdetail[i].date %>
                                        </td>
                                        <td><a href="/admin/home/view-details/<%= detail.userdetail[0]._id %>/<%= detail.eventdetail[i]._id %> "
                                                class="btn btn-info">View</a></td>

                                        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                                onclick="return confirm('do you wnt to delete {{this._id}}')">Delete
                                                </a>
                                        </td>
                                </tr>
                                <% } %>

                                    <% }) %>
                                        <!-- {{/each}} -->
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>