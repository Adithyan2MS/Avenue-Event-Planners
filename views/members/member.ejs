<section class="below-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="h2 text-center text-danger">My Events</div>
                    <% for(var i=0; i<event.length; i++) {%>
                        <div class="me text-center border border-info ">
                            <%= event[i].eventType %> Event on <%= event[i].date %> 
                            <!-- <a href="/chatwindow" class="btn bg-success text-white">chat</a> -->
                        </div>
                     <% } %>
                
            </div>
            <div class="col-md-6 verticalLine edit-profile-container">
                <div>
                  <div class="h3 text-center">Edit Profile</div>
                  <div class="border">
                    <div>
                      <div class="h6">Change Mail Id</div>
                      <% if(emailstatus==false){ %>
                        <div class="text-warning font-italic">Email already registered</div> 
                      <%  } %> 
                      <form class="" action="/team/member/change-email/<%= member._id %>" method="post" enctype="multipart/form-data">
                        <div class="form-row" style="display:block;">
                          <div class="form-group" style="display: inline-block;">
                              <label for="inputPassword4">New Email</label>
                              <input type="email" class="form-control" name="email" id="inputPassword4" placeholder=<%= member.email %> >
                          </div>
                          <div class="" style="display: inline-block;">
                              <button type="submit" class="btn btn-primary">Change</button>
                          </div>
                        </div>
                      </form>
                    </div><hr>
                    <div>
                      <div class="h6">Change Password</div>
                      <% if(passstatus==false){ %>
                        <div class="text-warning font-italic">Password does'nt match</div> 
                      <%  } %> 
                      <form class="" action="/team/member/change-password/<%= member._id %>" method="post" enctype="multipart/form-data">
                        <div class="form-row" style="display:block;">
                          <div class="form-group" style="display: inline-block;">
                              <label for="inputPassword4">New Password</label>
                              <input type="text" class="form-control" name="password1" id="inputPassword4" placeholder="Password">
                          </div>
                          <div class="form-group" style="display: inline-block;">
                            <label for="inputPassword4">Confirm Password</label>
                            <input type="text" class="form-control" name="password2" id="inputPassword4" placeholder="Password">
                          </div>
                          <div class="" style="display: inline-block;">
                              <button type="submit" class="btn btn-primary">Change</button>
                          </div>
                        </div>
                      </form>
                    </div><hr>
                    <div>
                      <div class="h6">Change Profile Picture</div>
                      <form class="" action="/team/member/change-image/<%= member._id %>" method="post" enctype="multipart/form-data">
                        <div class="form-row" style="display:block;">
                          <div class="form-group" style="display: inline-block;">
                            <label for="">Image</label>
                            <input type="file" name="image" class="form-control" required>
                          </div>
                          <div class="" style="display: inline-block;">
                              <button type="submit" class="btn btn-primary">Change</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
            </div>

        </div>
    </div>
</section>




